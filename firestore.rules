
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read from the 'reports' collection.
    // This is the primary fix for the "Could not load reports" error.
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read user profiles (e.g., to get admin info).
      // Writes are restricted to the user themselves or should be handled by admin server actions.
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
      // Allow create only on registration, which is handled by server-side logic.
      allow create: if request.auth != null;
    }

    // Rules for the 'invites' collection
    match /invites/{inviteId} {
        // Authenticated users can query for their own invite during registration.
        // Admins can read all invites through server-side actions.
        allow read: if request.auth != null;
        // Writes (create, update, delete) are restricted and must be done
        // via secure server-side admin actions, not directly from the client.
        allow write: if false;
    }
  }
}
