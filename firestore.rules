rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to get user data and check roles.
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    function hasRole(userId, role) {
      let userData = getUserData(userId);
      return userData.role == role;
    }
    function isSuperAdmin(userId) {
      return hasRole(userId, 'super-admin');
    }
    function isBigAdmin(userId) {
      return hasRole(userId, 'big-admin');
    }
    function isAdmin(userId) {
      return hasRole(userId, 'admin');
    }
    function isRegularUser(userId) {
      return hasRole(userId, 'user');
    }
    function isAnyAdmin(userId) {
      return isSuperAdmin(userId) || isBigAdmin(userId) || isAdmin(userId);
    }

    // =====================
    // Users Collection
    // =====================
    match /users/{userId} {
      // Anyone can create their own user document on sign-up.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can read their own data.
      // Admins can read any user data within their scope (checked at app level).
      allow get: if request.auth != null && (request.auth.uid == userId || isAnyAdmin(request.auth.uid));

      // Users can update their own data, but cannot change their role.
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.role == resource.data.role;

      // Only a super-admin can delete users (via admin SDK).
      allow delete: if request.auth != null && isSuperAdmin(request.auth.uid);

      // Any admin can list users. The app logic filters who they can see.
      allow list: if request.auth != null && isAnyAdmin(request.auth.uid);
    }

    // =====================
    // Invites Collection
    // =====================
    match /invites/{inviteId} {
      // Anyone (even unauthenticated) can read an invite to check its status.
      allow get: if true;

      // Only admins can manage invites.
      allow list, create, update, delete: if request.auth != null && isAnyAdmin(request.auth.uid);
    }

    // =====================
    // Reports Collection
    // =====================
    match /reports/{reportId} {
      // Any authenticated user can create a report.
      allow create: if request.auth != null;

      // Rules for reading single documents (get).
      allow get: if request.auth != null && (
        // The user owns this report.
        resource.data.teacherId == request.auth.uid ||
        // User is a Super Admin.
        isSuperAdmin(request.auth.uid) ||
        // User is a Big Admin for the report's district.
        (isBigAdmin(request.auth.uid) && getUserData(request.auth.uid).district == resource.data.district) ||
        // User is an Admin for the report's school.
        (isAdmin(request.auth.uid) && getUserData(request.auth.uid).schoolName == resource.data.schoolName)
      );
      
      // Rules for querying collections (list).
      allow list: if request.auth != null && (
        // A super-admin can list all reports without filters.
        isSuperAdmin(request.auth.uid) ||
        // A big-admin can only list reports filtered by their district.
        (isBigAdmin(request.auth.uid) && request.query.district == getUserData(request.auth.uid).district) ||
        // An admin can only list reports filtered by their school.
        (isAdmin(request.auth.uid) && request.query.schoolName == getUserData(request.auth.uid).schoolName) ||
        // A regular user can only list reports filtered by their teacherId.
        (isRegularUser(request.auth.uid) && request.query.teacherId == request.auth.uid)
      );

      // Rules for writing (update/delete). Similar logic to `get`.
      allow update, delete: if request.auth != null && (
        resource.data.teacherId == request.auth.uid ||
        isSuperAdmin(request.auth.uid) ||
        (isBigAdmin(request.auth.uid) && getUserData(request.auth.uid).district == resource.data.district) ||
        (isAdmin(request.auth.uid) && getUserData(request.auth.uid).schoolName == resource.data.schoolName)
      );
    }
  }
}