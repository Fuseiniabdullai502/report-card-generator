rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write reports they own.
    match /reports/{reportId} {
      // A user can read a single report if they are the teacher who created it.
      allow get: if request.auth != null && request.auth.uid == resource.data.teacherId;
      
      // A user can query the reports collection, but only for their own reports.
      allow list: if request.auth != null && request.query.where[0][2] == request.auth.uid;

      // Allow creating, updating, and deleting own reports.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.teacherId;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}