rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can create their own user document, but only read and update their own.
    // They cannot change their own role.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      
      // Ensure users cannot change their role.
      allow update: if request.resource.data.role == resource.data.role;
    }

    // Invites can be read by anyone to check for their email during registration.
    // Creating, updating, and deleting invites is restricted to backend admin functions.
    match /invites/{inviteId} {
      allow read: if true;
      allow write: if false; // Managed by backend with admin privileges
    }
    
    // Reports can be created by any authenticated user.
    // Users can read, update, and delete their own reports.
    // Admins can manage reports within their scope (handled by backend/more complex rules).
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow get: if request.auth != null && request.auth.uid == resource.data.teacherId;
      
      // Allow users to list reports only if they are querying for their own reports.
      allow list: if request.auth != null && request.query.where.teacherId == request.auth.uid;

      allow update, delete: if request.auth != null && request.auth.uid == resource.data.teacherId;
    }
  }
}
