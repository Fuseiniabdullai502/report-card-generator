rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // TEMP: let any signed-in user read reports
    match /reports/{doc} {
      allow read: if request.auth != null;
      allow write: if false;  // keep writes locked for safety
    }

    // keep everything else locked for now
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
