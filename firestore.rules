
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow a user to read their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow a user to create their own document upon registration
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow a user to update their own document (e.g., name, telephone)
      // Admins will update roles/status via a backend function, not directly.
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'reports' collection
    match /reports/{reportId} {
      // Any authenticated user can create, read, update, or delete reports.
      // This is a common pattern for apps where users need to manage shared data.
      // For more granular control, you could add conditions based on user roles
      // stored in the 'users' collection, for example:
      // allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow read, write: if request.auth != null;
    }

    // Rules for the 'invites' collection
    match /invites/{inviteId} {
        // Any user can read invites to check if their email is on the list
        allow read: if true;
        // Only authenticated users can create or modify invites (admins do this via backend functions)
        allow write: if request.auth != null;
    }
  }
}
