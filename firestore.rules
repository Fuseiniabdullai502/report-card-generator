
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to get the role of the currently authenticated user
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Helper function to check if the user is a super-admin, big-admin, or admin
    function isAdmin() {
      let userRole = getRole(request.auth.uid);
      return userRole == 'super-admin' || userRole == 'big-admin' || userRole == 'admin';
    }

    // =====================
    // Users collection rules
    // =====================
    match /users/{userId} {
      // Any authenticated user can create their own document (e.g., on registration).
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A user can only read their own document. Admins can read any user document.
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin());

      // A user can update their own info, but cannot change their role.
      // Admins can update any user document (role changes handled by Admin SDK).
      allow update: if request.auth != null && 
                    ((request.auth.uid == userId && request.resource.data.role == resource.data.role) || isAdmin());

      // Only super-admin should be able to delete users (handled by admin SDK).
      allow delete: if getRole(request.auth.uid) == 'super-admin';
      
      // Admins can list users to manage them
      allow list: if request.auth != null && isAdmin();
    }
    
    // =====================
    // Invites collection rules
    // =====================
    match /invites/{inviteId} {
      // Anyone (even unauthenticated users during registration) can read an invite to check its status.
      allow get: if true;

      // Only admins can create, update, or delete invites.
      allow create, update, delete, list: if request.auth != null && isAdmin();
    }

    // =====================
    // Reports collection rules
    // =====================
    match /reports/{reportId} {
      // Any authenticated user can create a report.
      allow create: if request.auth != null;

      // Allow GET if:
      // 1. The user is the one who created the report.
      // 2. The user has an administrative role.
      allow get: if request.auth != null && (resource.data.teacherId == request.auth.uid || isAdmin());
      
      // Allow LIST if the query is properly constrained for the user's role
      allow list: if request.auth != null && (
        (getRole(request.auth.uid) == 'super-admin') ||
        (getRole(request.auth.uid) == 'big-admin' && request.query.where[0][1] == 'district' && request.query.where[0][2] == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.district) ||
        (getRole(request.auth.uid) == 'admin' && request.query.where[0][1] == 'schoolName' && request.query.where[0][2] == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolName) ||
        (getRole(request.auth.uid) == 'user' && request.query.where[0][1] == 'teacherId' && request.query.where[0][2] == request.auth.uid)
      );

      // Allow update/delete if:
      // 1. The user created the report.
      // 2. The user is a super-admin.
      allow update, delete: if request.auth != null && (
        resource.data.teacherId == request.auth.uid ||
        getRole(request.auth.uid) == 'super-admin'
      );
    }
  }
}
