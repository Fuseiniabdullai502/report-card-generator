rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to upload to the student_photos directory
    match /student_photos/{imageId} {
      allow write: if request.auth != null;
    }
    
    // Allow any authenticated user to read any file. This is necessary
    // for the application to display the uploaded images.
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
