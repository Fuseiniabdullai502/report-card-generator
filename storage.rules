rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for any authenticated user
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow writes on image files for authenticated users, with size and type validation
    match /{allPaths=**}/{fileName} {
      allow write: if request.auth != null &&
                      request.resource.size < 2 * 1024 * 1024 &&
                      (fileName.matches('([^\\s]+(\\.(?i)(jpg|jpeg|png|webp))$)'));
    }
  }
}
