
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only for authenticated users and for specific image types and sizes
    match /student_photos/{imageId} {
      allow write: if request.auth != null &&
                      request.resource.size < 2 * 1024 * 1024 && // 2MB limit
                      request.resource.contentType.matches('image/(jpeg|png|webp|jpg)');
    }

    // Allow writes for other images (like logos, signatures) under the same conditions
    match /{other_images}/{imageId} {
       allow write: if request.auth != null &&
                      request.resource.size < 2 * 1024 * 1024 && // 2MB limit
                      request.resource.contentType.matches('image/(jpeg|png|webp|jpg)');
    }
  }
}
