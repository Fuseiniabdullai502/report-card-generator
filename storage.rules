rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to student photos so they can be displayed in the app
    match /student_photos/{imageId} {
      allow read: if true;
      // Only allow authenticated users to upload (create, update, delete) photos
      allow write: if request.auth != null;
    }
  }
}
