rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user (including anonymous) to READ files.
    // If you also want to block anonymous users from reading, we can restrict this.
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow only authenticated NON-anonymous users to WRITE images under 2MB.
    match /{allPaths=**} {
      allow write: if request.auth != null
                   && !request.auth.token.firebase.sign_in_provider.matches('anonymous')
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/(jpeg|png|webp)');
    }
  }
}
