rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =====================
    // Helper functions
    // =====================
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function hasRole(userId, role) {
      let userData = getUserData(userId);
      return userData.role == role;
    }

    function isAdmin(userId) {
      return hasRole(userId, 'super-admin') || hasRole(userId, 'big-admin') || hasRole(userId, 'admin');
    }

    // =====================
    // Users collection rules
    // =====================
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow get: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.role == resource.data.role;
      allow delete: if hasRole(request.auth.uid, 'super-admin');
      allow list: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // =====================
    // Invites collection rules
    // =====================
    match /invites/{inviteId} {
      allow get: if true;
      allow create, update, delete, list: if request.auth != null && isAdmin(request.auth.uid);
    }

    // =====================
    // Reports collection rules
    // =====================
    match /reports/{reportId} {
      // Any authenticated user can create a report.
      allow create: if request.auth != null;

      // Allow read/list/update/delete if:
      // 1. Teacher (user) owns the report (teacherId or ownerId matches UID).
      // 2. Super-admin (all reports).
      // 3. Big-admin (reports in their district).
      // 4. Admin (reports in their school).
      allow get, list, update, delete: if request.auth != null && (
        (resource.data.keys().hasAny(['teacherId', 'ownerId']) &&
         (resource.data.teacherId == request.auth.uid || resource.data.ownerId == request.auth.uid)) ||
        hasRole(request.auth.uid, 'super-admin') ||
        (hasRole(request.auth.uid, 'big-admin') && resource.data.keys().hasAll(['district']) &&
          getUserData(request.auth.uid).district == resource.data.district) ||
        (hasRole(request.auth.uid, 'admin') && resource.data.keys().hasAll(['schoolName']) &&
          getUserData(request.auth.uid).schoolName == resource.data.schoolName)
      );
    }
  }
}
