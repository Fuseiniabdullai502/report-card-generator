rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =====================
    // Helper functions
    // =====================
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function hasRole(userId, role) {
      // Check if user data and role exist before comparing
      return get(/databases/$(database)/documents/users/$(userId)).data.role == role;
    }

    function isAdmin(userId) {
      return hasRole(userId, 'super-admin') || hasRole(userId, 'big-admin') || hasRole(userId, 'admin');
    }

    // =====================
    // Users collection rules
    // =====================
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow get: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.role == resource.data.role;
      allow delete: if request.auth != null && hasRole(request.auth.uid, 'super-admin');
      allow list: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // =====================
    // Invites collection rules
    // =====================
    match /invites/{inviteId} {
      allow get: if true;
      allow create, update, delete, list: if request.auth != null && isAdmin(request.auth.uid);
    }

    // =====================
    // Reports collection rules
    // =====================
    match /reports/{reportId} {
      // Any authenticated user can create a report.
      allow create: if request.auth != null;

      // Rules for reading/writing a SINGLE document by its ID.
      // Admins can get any doc in their scope, users can get their own.
      allow get, update, delete: if request.auth != null && (
        resource.data.teacherId == request.auth.uid ||
        hasRole(request.auth.uid, 'super-admin') ||
        (hasRole(request.auth.uid, 'big-admin') && getUserData(request.auth.uid).district == resource.data.district) ||
        (hasRole(request.auth.uid, 'admin') && getUserData(request.auth.uid).schoolName == resource.data.schoolName)
      );
      
      // Rules for QUERYING the collection.
      // This is more restrictive. The query from the frontend MUST match these rules.
      allow list: if request.auth != null && (
        // super-admin can list all reports without filters.
        hasRole(request.auth.uid, 'super-admin') ||
        
        // big-admin can list reports if the query is filtering by THEIR district.
        (hasRole(request.auth.uid, 'big-admin') && request.query.where[0][0] == 'district' && request.query.where[0][2] == getUserData(request.auth.uid).district) ||
        
        // admin can list reports if the query is filtering by THEIR school.
        (hasRole(request.auth.uid, 'admin') && request.query.where[0][0] == 'schoolName' && request.query.where[0][2] == getUserData(request.auth.uid).schoolName) ||
        
        // regular user can list reports if the query is filtering by THEIR user ID.
        (hasRole(request.auth.uid, 'user') && request.query.where[0][0] == 'teacherId' && request.query.where[0][2] == request.auth.uid)
      );
    }
  }
}
